<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <include
        android:id="@+id/toolbar_info"
        layout="@layout/toolbar_fragment" />

    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_info"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:text="打磕冲"
        android:textSize="20sp"
        android:textColor="#1F2329"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_info" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="52dp"
        android:background="#F4F7FA"
        app:layout_constraintTop_toBottomOf="@+id/iv_info"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_reset_pic"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        android:layout_height="51dp"
        android:layout_marginTop="56dp"
        android:text="修改头像"
        android:textSize="16sp"
        android:textColor="#646A73"
        app:layout_constraintTop_toBottomOf="@+id/iv_info"
        tools:layout_editor_absoluteX="0dp"
        android:drawableRight="@mipmap/nav_my_unselect" />



</androidx.constraintlayout.widget.ConstraintLayout>